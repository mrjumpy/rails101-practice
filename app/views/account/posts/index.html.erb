<div class="col-md-12">
  
  <h2 class="text-center"> 我發表過的文章 </h2>
  
  <table class="table">
    <thead>
      <tr>
        <th> Content </th>
        <th> Group Name </th>
        <th> Last update </th> 
      </tr>
    </thead>
    
    <tbody>
     <% @posts.each do |post| %>
       <tr>
         <td><%= post.content %></td>
         <td><%= post.group.title %></td>
           <td> <%= post.updated_at.to_s(:short) %> </td> 
         <td>
           <% if post.editable_by?(current_user) %>
           <%= link_to("Edit", edit_group_post_path(post.group, post),
                       class: "btn btn-default btn-xs")%>
           <%= link_to("Delete", group_post_path(post.group, post),
                       class: "btn btn-default btn-xs ", method: :delete, 
                       data: { confirm: "Are you sure?" } )%>
            <% end %>
         </td>
       </tr>
     <% end %>
   </tbody>

  </table>
</div>